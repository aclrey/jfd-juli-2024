<style>
    .td {
        padding: 10px;
    }
</style>
<h1>Data Seluruh Karyawan PT Konoha Makmur</h1>
<hr>

<% if (message) { %>
    <div style="background-color:lightgreen; text-transform:capitalize;"><%= message %></div>
<% } %>
<a href="/karyawan/tambah">
    <button class="td" style="background-color:blue; color:white;">Tambah</button>
</a>
<br>
<br>
<table border="1">
    <thead>
        <tr>
            <th>Nama</th>
            <th>Gender</th>
            <th>NIP</th>
            <th colspan="3">Pilihan</th>
        </tr>
    </thead>
    <tbody>
        <% for (let i = 0; i < karyawan.length; i++) { %>
            <tr>
                <td class="td"><%= karyawan[i].nama %></td>
                <td class="td"><%= karyawan[i].gender %></td>
                <td class="td"><%= karyawan[i].nip %></td>
                <td class="td">
                    <a href="/karyawan/detail/<%= karyawan[i].id %>">
                        <button>See Detail</button>
                    </a>
                </td>>
                <td class="td">
                    <a href="/karyawan/edit/<%= karyawan[i].id %>">
                        <button style="background-color: rgb(255, 220, 117);">Edit</button>
                    </a>
                </td>>
                <td>
                    <a href="/karyawan/hapus/<%= karyawan[i].id %>"
                    onclick="return confirm('Yakin ingin menghapus <%= karyawan[i].nama %>? Data yang dihapus akan hilang selamanya.')">
                        <button style="background-color: red; color:white;">Delete</button>
                    </a>
                </td>
            </tr>>
        <% } %>
    </tbody>
</table>